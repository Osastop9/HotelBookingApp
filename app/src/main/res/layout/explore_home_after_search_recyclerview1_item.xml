<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="300dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="30dp">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/exploreHomeAfterSearchFragmentRecyclerViewImageview1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="10dp"
            android:src="@drawable/hotel_merdan_palace_turkey"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/exploreHomeAfterSearchFragmentRecyclerViewTextviewName1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/meridian_palace"
        android:padding="10dp"
        android:textAlignment="textStart"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
            android:id="@+id/exploreHomeAfterSearchFragmentRecyclerViewTextviewPrice1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/_7999"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:textSize="16sp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.cardview.widget.CardView>