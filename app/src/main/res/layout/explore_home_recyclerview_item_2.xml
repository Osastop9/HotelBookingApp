<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="220dp"
    android:layout_height="230dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/exploreHomeFragmentRecyclerViewImageview2"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/hotel_merdan_palace_turkey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/exploreHomeFragmentRecyclerViewTextviewName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:text="Meridian Palace"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/exploreHomeFragmentRecyclerViewImageview2"
            app:layout_constraintTop_toBottomOf="@+id/exploreHomeFragmentRecyclerViewImageview2" />

        <TextView
            android:id="@+id/exploreHomeFragmentRecyclerViewTvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            android:text="@string/gra_ikeja_lagos"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/exploreHomeFragmentRecyclerViewTextviewName2"
            app:layout_constraintTop_toBottomOf="@+id/exploreHomeFragmentRecyclerViewTextviewName2"
            app:layout_constraintVertical_bias="0.0" />

        <RatingBar
            android:id="@+id/hotel_desc_ratingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:isIndicator="true"
            android:numStars="5"
            android:progressTint="@color/c_red"
            android:rating="4"
            android:stepSize="0.5"
            app:layout_constraintEnd_toEndOf="@+id/exploreHomeFragmentRecyclerViewTvAddress"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/exploreHomeFragmentRecyclerViewTvAddress"
            app:layout_constraintTop_toBottomOf="@+id/exploreHomeFragmentRecyclerViewTvAddress"
            tools:ignore="UnusedAttribute" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>